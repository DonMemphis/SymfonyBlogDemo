{% extends "base.html.twig" %}

{% block title %}{{ article.title }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-9">
            <a href="{{ path('article_detail', {'url': article.url}) }}"><h3>{{ article.title }}</h3></a>
        </div>
        <div class="col-md-3">
            {{ article.createdAt }}
        </div>
    </div>
    <div class="tags">
        {% for tag in article.tags %}
        <span class="badge badge-secondary">{{ tag.name }}</span>
        {% endfor %}
    </div>

    <div class="mt-4">
        {{ article.text|purify }}
    </div>
{% endblock %}